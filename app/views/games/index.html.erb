<style>
    table, th, td{
        text-align: center;
        border-collapse: collapse;
        margin: 0 auto;
        padding: 5px 25px;
        font-family: Tahoma;
    }
    table {
        width: 600px;
    }
    th {
        text-align: center;
        color: #000;
        font-weight: bolder;
        font-size: 13px;
        padding-top: 0px;
        border-bottom: 3px solid #b8cbcd;
        padding-bottom: 15px;
		
    }
    tr:nth-child(even){
        background-color:#fcdd76;
    }
    h1{
        text-align: center;
		border-radius:15px;
        color: #000;
        font-weight: bolder;
        font-size: 19px;
        padding-top: 10px;
        padding-bottom: 12px;
        background-color:  #eedc82;
        margin-top: 20px;
    }
    body{  
        background-color:fff;
        
		overflow-x:hidden;
    }
    div{
        width: 800px;
        margin: 0 auto;
        padding: 20px;
      }
    a{
        text-decoration: none;
        color: #363636;
        font-family: Tahoma;


      }
    .oneq {
        text-align: center;
        color: #999;
        font-size: 15px;
        padding-top: 10px;
        text-transform: uppercase;
        font-weight: bold;
    }
    .twoq {
        text-align: center;
        color: #999;
        font-size: 15px;
        padding-top: 10px;
        text-transform: uppercase;
        font-weight: bold;
    }
    .threeq {
        color: #e57c00;
        font-weight: bold;
        font-size: 15px;
    } 

		#but {
		text-align:center;
					margin:0 auto;
				text-decoration:none; 
				display:block; 
				font-size:20px; 
				color:#000;border-radius:5px; 
				background-color:#f0dc82;
				 width:140px; 
				 height:25px;
				  padding:5px; 
				  padding-top:10px;
				   margin-top:10px;
			}
			#but:hover {
				background-color:#ffd700;
				
			}
			
			#but1 {
		text-align:center;
					margin:0 auto;
				text-decoration:none; 
				display:block; 
				font-size:12px; 
				color:#000;border-radius:5px; 
				background-color:#ffa500;
				 width:80px; 
				 height:14px;
				  padding:2px; 
				  padding-bottom:3px;
				  margin-top:5px;
				  margin-left:4px;
			}
			#but1:hover {
				background-color:#ff8800;
				
			}
</style>
<a id="but"  href="/home/index">Начать игру</a>
<div>
  
    <h1>Статистика игр</h1>
    <table>
        <tr>
            <th>Дата и время игры</th>
            <th>Победитель</th>
            <th>Количество ходов</th>
            <th></th>
        </tr>

      <% @games.each do |game| %>
        <tr>   
            <td><%= game.created_at %></td>
            <td><%if game.winner=="Browser"%>
                    <span class="oneq">Браузер</span>
                <% else %>
                    <span class="twoq">Сервер</span>
                <% end %>
            </td>
            <td><span class="threeq"><%= game.steps %></span></td>

            <td id="but1"><%= link_to 'Посмотреть', game %></td>
        </tr>
      <% end %>
    </table>
    <br />	<a id="but"  href="/home/index">Начать игру</a>
</div>