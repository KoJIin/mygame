<style>
    *{
    	font-family: Tahoma;
    }
	table{
	width:600px;}
    table, th, td{
        text-align: center;
        border-collapse: collapse;
        margin: 0 auto;
        padding: 5px 25px;
        font-family: Tahoma;
    }
     th {
        text-align: center;
        color: #000;
        font-weight: bolder;
        font-size: 13px;
        padding-top: 0px;
        border-bottom: 3px solid #b8cbcd;
        padding-bottom: 15px;
		
    }
    tr:nth-child(even){
        background-color:#fcdd76;
    }
    h2{
      	text-align: center;
		color: #000;
		font-weight: bolder;
		font-size: 16px;
		padding-top: 10px;
		padding-bottom: 12px;
		 background-color:  #eedc82;
		 border-radius:15px;
		margin-top: 5px;
    }
	
	#but {
					margin:0 auto;
				text-decoration:none; 
				display:block; 
				font-size:20px; 
				color:#000;
				border-radius:5px; 
				background-color:#f0dc82;
				 width:140px; 
				 height:25px;
				  padding:5px; 
				  padding-top:10px;
				   margin-top:10px;
				   text-align:center;
			}
			#but:hover {
				background-color:#ffd700;
				
			}
			
    body{
		background:#fff;
		overflow-x:hidden;
    }
    div{
        width: 800px;
        margin: 0 auto;
        padding: 20px;
    }
   
    .one {
   		text-align: center;
		color: #666;
		font-weight: bolder;
		font-size: 22px;
		text-transform: uppercase;
    }
    .two {
      	text-align: center;
		color: #666;
		font-weight: bolder;
		font-size: 22px;
		text-transform: uppercase;    }

    .oneq {
      	text-align: center;
		color: #999;
		font-size: 15px;
		padding-top: 10px;
		text-transform: uppercase;
		font-weight: bold;
    }
    .twoq {
      	text-align: center;
		color: #999;
		font-size: 15px;
		padding-top: 10px;
		text-transform: uppercase;
		font-weight: bold;
    }
    p {
      	text-align: center;
    }
    .top {
      	text-align: center;
		color: #000;
		font-weight: bolder;
		font-size: 19px;
		margin-bottom: 15px;
		margin-top: 10px;
    }
    .yellow {
      	color: #e57c00;
      	font-weight: bold;
      	font-size: 15px;
    }
    .three {
      	text-align: center;
		color: #e57c00;
		font-weight: bolder;
		font-size: 20px;
		text-transform: uppercase;
		padding-left: 10px;
    }
   
</style>
<div>
<a id="but"  href="/home/index">Играть еще</a>
<a id="but"  href="/games">Статистика</a>
	
    <p class="top">Победил:</p>
    <p>
        <%if @game.winner=="Browser"%>
              <span class="one">Браузер</span>
        <% else %>
              <span class="two">Сервер</span>
        <% end %>
    </p>
    <p class="top">
        Количество ходов:
        <span class="three"><%= @game.steps %></span>
    </p>
    <h2>Ходы</h2>
    <table>
        <tr>
        	<th>Игрок</th>
        	<th>Количество палочек до хода</th>
        	<th>Количество взятых палочек</th>
        	<th>Ход сделан</th>
        </tr>
      	<% @game.pitches.each do |pitch| %>
      	<tr>
          	<td><%if pitch.player=="Browser"%>
              	<span class="oneq">Браузер</span>
       		<% else %>
              	<span class="twoq">Сервер</span>
        	<% end %>
    		</td>
          	<td><%= pitch.all %></td>
      	  	<td class="yellow"> <%= pitch.take%> </td>
          	<td><%= pitch.created_at %></td>
        </tr> 
      	<% end %>
    </table>
	
	<br/>
	<a id="but"  href="/home/index">Играть еще</a>
<a id="but"  href="/games">Статистика</a>

</div>
